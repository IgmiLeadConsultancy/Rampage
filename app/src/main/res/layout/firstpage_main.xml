<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FirstPageActivity"
    android:background="#000">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RAMPAGE"
        android:textColor="#FFC107"
        android:textSize="@dimen/_25sdp"
        android:fontFamily="@font/audiowide_regular"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_80sdp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select an event to view upcoming battels for :"
        android:textColor="#fff"
        android:textSize="@dimen/_15sdp"
        android:fontFamily="@font/lato_semibold"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_marginRight="@dimen/_10sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_15sdp">

        <LinearLayout
            android:id="@+id/ll_spinner"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/round_small"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_spinner_set"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="wrap_content"
                android:text="Select an event"
                android:textColor="#000"
                android:textSize="@dimen/_13sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_8sdp"
                android:fontFamily="@font/lato_bold"/>



            <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_14sdp"
                android:background="@drawable/down_arrow"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:backgroundTint="#2196F3"/>



        </LinearLayout>

<Button
    android:id="@+id/but_submit"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_30sdp"
    android:text="Submit"
    android:background="@drawable/round_small"
    android:layout_marginLeft="@dimen/_12sdp"
    android:backgroundTint="#2196F3"/>

    </LinearLayout>





    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginLeft="@dimen/_14sdp"/>





</LinearLayout>